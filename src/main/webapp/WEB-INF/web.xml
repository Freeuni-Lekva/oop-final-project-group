<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <display-name>Archetype Created Web Application</display-name>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>


  <!-- Registration Servlet -->
  <servlet>
    <servlet-name>CreateAccountServlet</servlet-name>
    <servlet-class>User.CreateAccountServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreateAccountServlet</servlet-name>
    <url-pattern>/createAccount</url-pattern>
  </servlet-mapping>

  <!-- Login Servlet -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>User.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- Home Page Servlet -->
  <servlet>
    <servlet-name>HomePageServlet</servlet-name>
    <servlet-class>User.HomePageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HomePageServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>

  <!-- Logout Servlet -->
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>User.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
<!-- Friendship Servlets -->
  <servlet>
    <servlet-name>UserSearchServlet</servlet-name>
    <servlet-class>com.quizwebsite.friendship.UserSearchServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserSearchServlet</servlet-name>
    <url-pattern>/searchUsers</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SendFriendRequestServlet</servlet-name>
    <servlet-class>com.quizwebsite.friendship.SendFriendRequestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SendFriendRequestServlet</servlet-name>
    <url-pattern>/sendFriendRequest</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ManageFriendRequestServlet</servlet-name>
    <servlet-class>com.quizwebsite.friendship.ManageFriendRequestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ManageFriendRequestServlet</servlet-name>
    <url-pattern>/manageFriendRequest</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RemoveFriendServlet</servlet-name>
    <servlet-class>com.quizwebsite.friendship.RemoveFriendServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RemoveFriendServlet</servlet-name>
    <url-pattern>/removeFriend</url-pattern>
  </servlet-mapping>
</web-app>
